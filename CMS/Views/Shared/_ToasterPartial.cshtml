@inject AlertHelper alertHelper;

@{
    var (isSuccess, message) = alertHelper.GetModelValidatorResult();
}

<script>
    $(document).ready(function () {
        var isSuccess = @Html.Raw(Json.Serialize(isSuccess));
        var message = @Html.Raw(Json.Serialize(message));

        if (isSuccess) {
            alert(message);
        } else {
            alert(message);
        }
    });
</script>
